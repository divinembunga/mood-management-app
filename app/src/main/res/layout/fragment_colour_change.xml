<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    tools:context=".ColourChange">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/setting_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/settings_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Customise the mood colours"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/settings_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_description"
                android:layout_margin="30dp"
                android:text="Great"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:id="@+id/set_colour_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/settings_description"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="100dp"
                android:background="@color/colorVeryHappy" />

            <ImageButton
                android:id="@+id/btn_edit_colour"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/set_colour_one"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btn_save_colour"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/btn_edit_colour"
                android:background="@null"
                android:src="@android:drawable/ic_menu_save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_description"
                android:layout_marginTop="90dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Good"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/settings_description"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="83dp"
                android:layout_marginBottom="100dp"
                android:background="@color/colorHappy" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@id/set_colour_one"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@id/btn_edit_colour"
                android:background="@null"
                android:src="@android:drawable/ic_menu_save" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_description"
                android:layout_marginTop="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Ok"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/settings_description"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="143dp"
                android:layout_marginBottom="100dp"
                android:background="@color/colorOk" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:layout_toRightOf="@id/set_colour_one"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:layout_toRightOf="@id/btn_edit_colour"
                android:background="@null"
                android:src="@android:drawable/ic_menu_save" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_description"
                android:layout_marginTop="210dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Not Good"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/settings_description"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="203dp"
                android:layout_marginBottom="100dp"
                android:background="@color/colorSad" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@id/set_colour_one"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="210dp"
                android:layout_toRightOf="@id/btn_edit_colour"
                android:background="@null"
                android:src="@android:drawable/ic_menu_save" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_description"
                android:layout_marginTop="270dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="Bad"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/settings_description"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="263dp"
                android:layout_marginBottom="100dp"
                android:background="@color/colorAngry" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="270dp"
                android:layout_toRightOf="@id/set_colour_one"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/settings_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="270dp"
                android:layout_toRightOf="@id/btn_edit_colour"
                android:background="@null"
                android:src="@android:drawable/ic_menu_save" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>