<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contact_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Contacts"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/contact_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:drawable/ic_menu_add"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/contact_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardUseCompatPadding="true"
                android:layout_below="@id/contact_title">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/contact_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="Dad"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:text="+XXX-XX-XXXX-X2" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user"
                            android:layout_below="@id/contact_img"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="70dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="Mom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="100dp"
                            android:text="+XXX-XX-XXXX-X5"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user"
                            android:layout_below="@id/contact_img"
                            android:layout_marginTop="90dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="Best Friend"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/contact_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="170dp"
                            android:text="+XXX-XX-XXXX-X7"/>

                    </RelativeLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/helpline_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Lines"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/contact_card"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/helpline_title"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/contact_card"
                app:srcCompat="@android:drawable/ic_menu_add"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:cardUseCompatPadding="true"
                android:layout_below="@id/helpline_title">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/helpline_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@android:drawable/ic_menu_call"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="GP"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:text="+XXX-XX-XXXX-76"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@android:drawable/ic_menu_call"
                            android:layout_below="@id/helpline_img"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="70dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="SHINE"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="100dp"
                            android:text="+XXX-XX-XXXX-58"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@android:drawable/ic_menu_call"
                            android:layout_below="@id/helpline_img"
                            android:layout_marginTop="90dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="140dp"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:text="Student Niteline"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/helpline_img"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="170dp"
                            android:text="+XXX-XX-XXXX-90"/>

                    </RelativeLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>